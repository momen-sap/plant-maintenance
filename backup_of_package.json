{
  "name": "plant-maintenance",
  "version": "1.0.0",
  "description": "CAP App used for sap plant maintenance",
  "repository": "https://github.com/momen-sap/plant-maintenance.git",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "latest",
    "express": "latest",
    "@sap/cds-hana": "latest",
    "@sap/xssec": "latest",
    "passport": "latest"
  },
  "devDependencies": {
    "@cap-js/sqlite": "latest",
    "@sap/cds-dk": "latest",
    "@sap/ux-specification": "latest",
    "rimraf": "latest"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch --open index-launchpage.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/tasks-ui",
    "app/tasksui",
    "app/workordersui"
  ],
  "cds": {
    "requires": {
      "[development]": {
        "db": "sqlite",
        "auth": {
          "kind": "mocked",
          "users": {
            "employee@sap.com": {
              "password": "initial",
              "ID": "employee@sap.com",
              "roles": [
                "TechEmployee"
              ]
            },
            "manager@sap.com": {
              "password": "initial",
              "ID": "manager@sap.com",
              "roles": [
                "PlantManager"
              ]
            }
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  }
}